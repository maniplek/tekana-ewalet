{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "test/*"
      ]
    },
    "rootDir": ".",
    "target": "es2017"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
